<%- include('../layout/head.ejs') %>
  <body>
    <form action="formularioContenidoMultimedia" method="post" class="tarjetaFormulario" enctype="multipart/form-data">
      <h2>Contenido Multimedia</h2>
      <label for="">Nombre del contenido</label>
      <input type="text" name="titulo" />
      <label for="">Categoria</label>
      <select name="categoria" id="">
        <option selected disabled>Seleccionar</option>
        <% categorias.forEach(categoria => { %>  
          <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
        <% }) %>
      </select> <br>
      <label for="">Cargar Archivo</label>
      <input type="file" name="archivo" accept=".mp3, .mp4" />
      <button>Registrar</button>
    </form>
  </body>
</html>
